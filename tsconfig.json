{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES6",
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "./dist",
    },
    "exclude": ["node_modules"],
    "include": ["src"]
  }